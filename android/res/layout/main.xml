<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:id="@+id/game"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />

    <RelativeLayout
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/video"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/pTitle"
            android:textColor="#ffffff"
            android:text="Title"
            android:shadowColor="#000000"
            android:shadowRadius="10"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="2dp"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp" />

        <TextView
            android:layout_below="@id/pTitle"
            android:id="@+id/pSubtitle"
            android:textColor="#f0f0f0"
            android:text="Subtitle"
            android:shadowColor="#000000"
            android:shadowRadius="10"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="2dp"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp" />

        <TextView
            android:id="@+id/pMessage"
            android:layout_alignParentBottom="true"
            android:textColor="#ffffff"
            android:text="ЗАГРУЗКА..."
            android:shadowColor="#000000"
            android:shadowRadius="10"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp" />

        <TextView
            android:id="@+id/pSecond"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:textColor="#ffffff"
            android:text="00"
            android:shadowColor="#000000"
            android:shadowRadius="8"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/pMinute"
            android:layout_marginTop="11.5dp"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@id/pSecond"
            android:textColor="#ffffff"
            android:text="02"
            android:padding="2dp"
            android:shadowColor="#000000"
            android:shadowRadius="8"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/pSecond"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/skip"
            android:background="@drawable/skip_bg"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="30dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:textColor="@color/skip_text_color"
            android:text="ПРОПУСТИТЬ"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</RelativeLayout>